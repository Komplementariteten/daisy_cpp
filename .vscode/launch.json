    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cortex-debug", 
            "request": "launch",
            "servertype": "bmp",
            "interface": "swd",
            "device": "STM32H750IBK6",
            "BMPGDBSerialPort": "/dev/serial/by-id/usb-Black_Magic_Debug_Black_Magic_Probe_v1.10.1_72AE49F4-if00",
            "executable": "./build/daisy_cpp",
            "svdFile": "${workspaceRoot}/resources/STM32H750.svd",
            "debuggerArgs": ["-x", "blackmagic.gdb"],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "Build (Debug)",
            "showDevDebugOutput": "raw"
        }]
}